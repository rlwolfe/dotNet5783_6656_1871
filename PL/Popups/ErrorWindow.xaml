<Window x:Class="PL.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Error Window" x:Name="WindowTitle" Height="350" Width="400">
    <Grid>
        <TextBlock x:Name="ErrorMessage" Height="170" Margin="10,90,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Error" FontSize="24" Foreground="Red" FontFamily="Trebuchet MS" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="73" Margin="10,10,0,0" VerticalAlignment="Top" Width="68" Source="/Popups/error.png"/>
        <Button Name="OkButton" Content="OK" Background="#FFF9F9F9" FontWeight="Bold" FontSize="22" FontFamily="Segoe UI Black" Margin="150,0,150,10" Click="OkButton_Click" Height="50" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
