<Window x:Class="PL.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ErrorWindow" x:Name="WindowTitle" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="ErrorMessage" Height="150" Margin="175,83,102,0" TextWrapping="Wrap" Text="Error" VerticalAlignment="Top" FontSize="36" Foreground="Red" FontFamily="Trebuchet MS" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="73" Margin="101,83,0,0" VerticalAlignment="Top" Width="68" Source="/error.png"/>
        <Button Name="OkButton" Content="OK" Height="50" VerticalAlignment="Top" Width="100" Background="#FFF9F9F9" HorizontalAlignment="Center" FontWeight="Bold" FontSize="22" FontFamily="Segoe UI Black" Margin="0,334,0,0" Click="OkButton_Click"/>

    </Grid>
</Window>
